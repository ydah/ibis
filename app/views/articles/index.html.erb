<div class="container js-articlesIndex">
  <h1 class="#f3e5f5 purple lighten-5 center">[Rails+Vue.js]~Articles~</h1>
  <div class="row #e3f2fd blue lighten-5">
    <% @articles.each do |article| %>
      <div class="col s4 m6">
        <div class="card btn">
          <span class="card-title" v-on:click="setArticleInfo(<%= article.id %>)">
            <%= article.title %>
          </span>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row" v-show="articleInfoBool">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">
            {{ articleInfo.title }}
          </span>
          <div class="detail">
            {{ articleInfo.author }}
          </div>
          <div class="detail">
            {{ articleInfo.tag }}
          </div>
          <div class="detail">
            {{ articleInfo.content }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_pack_tag 'article' %>
